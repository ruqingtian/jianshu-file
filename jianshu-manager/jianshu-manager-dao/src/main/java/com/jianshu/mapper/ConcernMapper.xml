<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jianshu.mapper.ConcernMapper" >
    <resultMap id="BaseResultMap" type="com.jianshu.pojo.Concern">


        <result column="userid" property="userId" jdbcType="INTEGER"/>
        <result column="concernid" property="concernId" jdbcType="INTEGER"/>
    </resultMap>
    <!--/查询该用户关注的 id   集合-->
    <select id="selectListByUserId" parameterType="Integer" resultMap="BaseResultMap">
        SELECT concernid FROM concern where userid=#{userId}
    </select>
    <!--添加关注-->
    <insert id="insertConcern">
        INSERT INTO concern VALUE (#{userId},#{concernId})
    </insert>
    <!--查询关注-->
    <select id="selectConcern" resultMap="BaseResultMap">
        SELECT * FROM concern WHERE userid=#{userId} AND concernid=#{concernId}
    </select>
    <!--删除关注-->
    <delete id="deleteConcern">
        DELETE FROM concern WHERE userid=#{userId} AND concernid=#{concernId}
    </delete>

</mapper>
